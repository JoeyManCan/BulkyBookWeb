@model IList<Category>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary">Categories</h2>
        </div>
    </div>
</div>
@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">
                            <label>@item.Name</label>
                        </td>
                        <td width="30%">
                            <label>@item.DisplayOrder</label>
                        </td>
                        <td>
                            <a class="btn btn-warning" 
                            asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger" 
                            asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
}

        <div class="col-12" style="text-align:center">
            <a asp-controller="Categories" asp-action="Create" class="btn-primary btn ">
                <i class="bi bi-plus-circle"></i> Create a new Category
            </a>
        </div>

