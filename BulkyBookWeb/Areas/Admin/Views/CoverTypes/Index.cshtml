@model IList<CoverType>

@{
    ViewData["Title"] = "Cover Type Index";

}

@if (TempData["success"] != null)
{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary">Cover Types</h2>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Cover Type Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="100%">
                        <label>@item.Name</label>
                    </td>

                    <td>
                        <a class="btn btn-warning"
                   asp-controller="CoverTypes" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                   asp-controller="CoverTypes" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}


<div class="col-12" style="text-align:center">
    <a asp-controller="CoverTypes" asp-action="Create" class="btn-primary btn">
        <i class="bi bi-plus-circle"></i> Create a new Cover Type
    </a>
</div>
