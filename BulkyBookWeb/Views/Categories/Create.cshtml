@model Category
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-controller="Categories" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        @*<div asp-validation-summary="All"></div>*@

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div style="text-align:center">
            <button type="submit" class="btn-primary btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </button>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-skip-backward-circle-fill"></i> Back To List
            </a>
        </div>
    </div>
</form>

@*Adding client side validation (JS)*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

